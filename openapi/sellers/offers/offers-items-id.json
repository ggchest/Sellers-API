{
  "put": {
    "tags": ["Sellers Offers"],
    "summary": "Update Items Offer",
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "price": {
                "type": "string",
                "minLength": 1,
                "maxLength": 19,
                "example": "66.32",
                "pattern": "^[0-9]{1,16}(\\.[0-9]{1,2})?$"
              },
              "delivery_time": {
                "type": "string"
              },
              "qty_total": {
                "type": "integer"
              },
              "qty_min": {
                "type": "integer"
              },
              "attributes": {
                "type": "array",
                "items": {
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "option_id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Success"
      },
      "400": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/schemas-common.json#/components/schemas/400"
            }
          }
        }
      },
      "422": {
        "description": "Unprocessable Entity",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/schemas-common.json#/components/schemas/422"
            }
          }
        }
      },
      "403": {
        "description": "Forbidden",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../../schemas/schemas-common.json#/components/schemas/403"
            }
          }
        }
      }
    }
  }
}